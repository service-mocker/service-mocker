{
  "compilerOptions": {
    "target": "es5",
    "outDir": ".",
    "lib": [
        "dom",
        "es2017"
    ],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
        "service-mocker/*": [ "src/*" ]
    }
  },
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ]
}
